<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hide progress text"/>
    <com.ll.progressbar.view.ProgressView
        android:id="@+id/progressView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:movePointColor="#00cfc7"
        app:progressReachedColor="#00cfc7"
        app:progressTextColor="#00cfc7"
        app:isShowProgressText="false"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="show progress text"/>
    <com.ll.progressbar.view.ProgressView
        android:id="@+id/progressView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:isShowProgressText="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="chagne move point color"/>
    <com.ll.progressbar.view.ProgressView
        android:id="@+id/progressView3"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        app:movePointColor="#ff0000"
        app:progressReachedColor="#00cfc7"
        app:progressTextColor="#00cfc7"
        />
</LinearLayout>
